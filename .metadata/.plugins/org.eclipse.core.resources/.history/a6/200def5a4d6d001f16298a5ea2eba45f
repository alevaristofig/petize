package com.api.loja.domain.exception;

public class ProdutoException extends EntidadeNaoEncontradaException {

	private static final long serialVersionUID = 1L;
	
	public ProdutoException(String mensagem) {
		super(mensagem);
	}

	public ProdutoException(String mensagem, Long id) {
		this(String.format("Não existe um cadastro de estado com código %d", id));
	}

}
